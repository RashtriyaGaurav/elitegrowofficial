<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EliteGrow | Authentication</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="min-h-screen flex flex-col items-center justify-center">

  <div id="messageBox"
    class="hidden fixed top-5  bg-green-100 border border-green-300 text-green-700 px-4 py-2 rounded shadow">
    <span id="messageText"></span>
  </div>

    <h2 class="text-3xl font-bold  mb-6 text-left">Register</h2>

    <form class="space-y-4" action="/auth/register" method="POST">
      <div>
        <label class="block mb-1 mx-1 text-sm" for="email">Email</label>
        <input id="email" type="email" name="email" class="text-black w-full px-4 py-2 rounded-lg bg-zinc-100 border border-black/10 placeholder-black/60 focus:outline-none focus:ring-2 focus:ring-white" placeholder="you@example.com" required>
      </div>

      <div>
        <label class="block mb-1 mx-1 text-sm" for="password">Password</label>
        <input id="password" type="password" name="password" class="text-black w-full px-4 py-2 rounded-lg bg-zinc-100 border border-black/10 placeholder-black/60 focus:outline-none focus:ring-2 focus:ring-white" placeholder="••••••••" required>
      </div>

      <button type="submit" class="w-full bg-blue-500 font-semibold py-2 rounded-lg hover:scale-105 transition duration-300">
        Sign Up
      </button>
    </form>

    <p class="text-center text-sm mt-4">Already have an account?
      <a href="/login" class="text-blue-500 underline hover:text-blue-700">login</a>
    </p>

    <script>
       const urlParams = new URLSearchParams(window.location.search);
    const message = urlParams.get('message');

    if (message) {
      const box = document.getElementById('messageBox');
      const text = document.getElementById('messageText');

      text.textContent = message;
      box.classList.remove('hidden');

      // Hide after 3 seconds
      setTimeout(() => {
        box.classList.add('hidden');

        // ✅ Remove ?message from the URL (without reload)
        const cleanURL = window.location.origin + window.location.pathname;
        window.history.replaceState({}, document.title, cleanURL);
      }, 3000);
    }
    </script>
  
<body>

</body>

</html>