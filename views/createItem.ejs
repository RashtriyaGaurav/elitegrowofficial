<%- include('partials/head', { 
  title: "Create Item | EliteGrow",
  description: "Upload your creative assets to EliteGrow. Share your tools, templates, and resources with the community.",
  keywords: "EliteGrow, create item, upload assets, creative tools, templates, resources, developers, designers, creators", 
  ogTitle: "Create Item | EliteGrow",
  ogDescription: "Share your creative assets with the EliteGrow community. Upload tools, templates, and resources to help others in their digital journey.",
  ogImage: "/images/EliteGrowLogo.png", 
  ogUrl: "/createItem" 
}) %>
<%- include('partials/navbar') %>

<body class="bg-black text-white min-h-screen">
  <main class="flex flex-col items-center justify-center py-20 px-4">

    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-3xl sm:text-5xl font-bold mb-2">Create a New Item</h1>
      <p class="text-gray-400 max-w-xl mx-auto text-sm sm:text-base">
        Upload a resource to help thousands of EliteGrow users. Contribute your best tools, templates, or assets.
      </p>
    </div>

    <!-- Image Preview -->
    <img id="profilePreview" src="" alt="Item Preview"
      class="w-[80vw] sm:w-[40vw] max-w-md rounded-lg shadow-xl mb-8 hidden border border-zinc-700" />

    <!-- Upload Form -->
    <form action="/upload/createItem" method="POST" enctype="multipart/form-data"
      class="w-full max-w-md bg-zinc-800/50 p-6 rounded-xl border border-zinc-700 shadow-xl space-y-5 backdrop-blur-sm">

      <!-- Image Upload -->
      <div>
        <label for="profilePhoto" class="block mb-2 font-medium text-sm text-gray-200">Upload Item Image</label>
        <input type="file" id="profilePhoto" name="itemImage" accept="image/*"
          class="block w-full text-sm text-blue-300 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:font-semibold file:bg-blue-700/20 hover:file:bg-blue-700/40 cursor-pointer"
          onchange="previewImage(event)" required />
      </div>

      <!-- Item Name -->
      <div>
        <label for="itemName" class="block mb-1 text-sm text-gray-300">Item Name<span class="text-red-500">*</span> </label>
        <input type="text" id="itemName" name="itemName" placeholder="Enter item name"
          class="w-full bg-zinc-900 border border-zinc-600 text-white p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          required />
      </div>

      <!-- Item Link -->
      <div>
        <label for="itemLink" class="block mb-1 text-sm text-gray-300">Item Link<span class="text-green-500">*</span></label>
        <input type="text" id="itemLink" name="itemLink" placeholder="https://example.com/item"
          class="w-full bg-zinc-900 border border-zinc-600 text-white p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Item Path -->
      <div>
        <label for="itemPath" class="block mb-1 text-sm text-gray-300">Item Path<span class="text-green-500">*</span></label>
        <input type="text" id="itemPath" name="itemPath" placeholder="/path/to/item"
          class="w-full bg-zinc-900 border border-zinc-600 text-white p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Item Description -->
       <h1 class="px-1 text-sm">You have to choose one of them only<span class="text-green-500">*</span></h1>

      <!-- Submit -->
      <div>
        <input type="submit" value="Upload Item"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold p-2 rounded-lg transition duration-300 cursor-pointer" />
      </div>
    </form>
  </main>

  <%- include('partials/footer') %>
  <%- include('partials/scripts') %>

  <!-- Image Preview Script -->
  <script>
    function previewImage(event) {
      const input = event.target;
      const preview = document.getElementById("profilePreview");

      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function (e) {
          preview.src = e.target.result;
          preview.classList.remove("hidden");
        };
        reader.readAsDataURL(input.files[0]);
      }
    }
  </script>
</body>
