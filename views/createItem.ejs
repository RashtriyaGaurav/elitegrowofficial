<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>EliteGrow | Create Item</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class=" text-gray-800">
  <main class="min-h-screen flex flex-col items-center justify-center p-6">
    <h1 class="text-3xl font-semibold mb-6">Create New Item</h1>

    <img id="profilePreview" src="" alt="Item Preview"
      class="w-[50vw] max-w-md rounded-md shadow-md mb-6 hidden" />

    <form action="/createItem" method="POST" enctype="multipart/form-data"
      class="w-full max-w-md space-y-4 bg-white p-6 rounded-lg border border-zinc-300 shadow-md">
      
      <!-- File Input -->
      <div>
        <label for="profilePhoto" class="block mb-2 font-medium">Upload Item Image</label>
        <input type="file" id="profilePhoto" name="itemImage" accept="image/*"
          class="block w-full text-sm text-blue-700 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:font-semibold file:bg-blue-50 hover:file:bg-blue-100 cursor-pointer"
          onchange="previewImage(event)" required />
      </div>

      <!-- Text Inputs -->
      <div>
        <label for="itemName" class="block mb-1 font-medium">Item Name</label>
        <input type="text" id="itemName" name="itemName" placeholder="Enter item name"
          class="w-full border border-gray-300 p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          required />
      </div>

      <div>
        <label for="itemLink" class="block mb-1 font-medium">Item Link</label>
        <input type="text" id="itemLink" name="itemLink" placeholder="https://example.com/item"
          class="w-full border border-gray-300 p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
      </div>

      <div>
        <label for="itemPath" class="block mb-1 font-medium">Item Path</label>
        <input type="text" id="itemPath" name="itemPath" placeholder="/path/to/item"
          class="w-full border border-gray-300 p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
      </div>

      <!-- Submit Button -->
      <div>
        <input type="submit" value="Upload"
          class="w-full bg-blue-600 text-white p-2 rounded font-semibold hover:bg-blue-700 cursor-pointer transition duration-150" />
      </div>
    </form>
  </main>

  <script>
    function previewImage(event) {
      const input = event.target;
      const preview = document.getElementById("profilePreview");

      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function (e) {
          preview.src = e.target.result;
          preview.classList.remove("hidden");
        };
        reader.readAsDataURL(input.files[0]);
      }
    }
  </script>
</body>

</html>
