<%- include('partials/head', { title: "Profile | EliteGrow" }) %>

<!-- Profile Header -->
<div class="w-full bg-black/20 py-24 text-center">
  <h1 class="text-4xl sm:text-[6vw] font-bold leading-tight">Your Profile</h1>
  <p class="text-gray-400 mt-2 px-5 text-sm sm:text-base">Manage your account information and activity stats</p>
</div>

<!-- Profile Info -->
<div class="max-w-4xl mx-auto px-6 sm:px-12 py-10 grid grid-cols-1 md:grid-cols-3 gap-6">
  <!-- User Card -->
  <div class="bg-zinc-800/50 p-6 rounded-xl text-center shadow hover:shadow-lg transition duration-300">
    <h2 class="text-xl font-semibold"><%= user.name %></h2>
    <p class="text-gray-400 text-sm"><%= user.email %></p>
  </div>

  <!-- User Stats -->
  <div class="md:col-span-2 grid grid-cols-2 sm:grid-cols-3 gap-4">
