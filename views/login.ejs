<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>EliteGrow | Login</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <link rel="stylesheet" href="/style.css" />
</head>

<body class="min-h-screen bg-zinc-900 flex flex-col items-center justify-center text-white px-4">

  <!-- Alert Box -->
  <div id="alertBox"
    class="fixed top-6 left-1/2 -translate-x-1/2 hidden max-w-md w-full px-4 py-3 rounded-lg bg-red-100 text-red-700 border border-red-300 text-sm shadow-lg z-50">
    <span id="alertText">This is an error message.</span>
  </div>

  <!-- Success Box -->
  <div id="messageBox"
    class="fixed top-6 left-1/2 -translate-x-1/2 hidden max-w-md w-full px-4 py-3 rounded-lg bg-green-100 text-green-800 border border-green-300 text-sm shadow-lg z-50">
    <span id="messageText"></span>
  </div>

  <!-- Form Card -->
  <div class="w-full max-w-md bg-zinc-800/50 backdrop-blur-md rounded-2xl p-8 border border-zinc-700">
    <h2 class="text-3xl font-bold text-center mb-6">Sign in to <span class="text-blue-500">EliteGrow</span></h2>

    <form id="loginForm" method="POST" class="space-y-5">
      <!-- Email -->
      <div>
        <label for="email" class="block mb-1 text-sm font-medium">Email</label>
        <input id="email" name="email" type="email" required placeholder="you@example.com"
          class="w-full px-4 py-2 bg-zinc-100 text-black rounded-lg border border-zinc-300 placeholder-black/50 focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block mb-1 text-sm font-medium">Password</label>
        <input id="password" name="password" type="password" required placeholder="••••••••"
          class="w-full px-4 py-2 bg-zinc-100 text-black rounded-lg border border-zinc-300 placeholder-black/50 focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-300 hover:scale-[1.02]">
        Sign In
      </button>
    </form>

    <p class="text-center text-sm mt-6 text-zinc-300">
      Don’t have an account?
      <a href="/auth/register" class="text-blue-500 hover:underline">Create one</a>
    </p>
  </div>

  <!-- JS -->
   <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const form = document.getElementById("loginForm");
    const alertBox = document.getElementById("alertBox");
    const alertText = document.getElementById("alertText");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value;

      const res = await fetch("/auth/form/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email, password }),
      });

      const text = await res.text();

      if (!res.ok) {
        alertText.textContent = text || "Login failed. Try again.";
        alertBox.classList.remove("hidden");
        setTimeout(() => alertBox.classList.add("hidden"), 3000);
      } else {
        window.location.href = "/?message=Login successful";
      }
    });

    // Handle query message display
    const urlParams = new URLSearchParams(window.location.search);
    const message = urlParams.get("message");

    if (message) {
      const messageBox = document.getElementById("messageBox");
      const messageText = document.getElementById("messageText");
      messageText.textContent = message;
      messageBox.classList.remove("hidden");
      setTimeout(() => {
        messageBox.classList.add("hidden");
        const cleanURL = window.location.origin + window.location.pathname;
        window.history.replaceState({}, document.title, cleanURL);
      }, 3000);
    }
  </script>

</body>

</html>